<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Theme appliqué au démarrage (Splash screen) -->
    <style name="LaunchTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowBackground">@drawable/launch_background</item>
    </style>

    <!-- Theme par défaut utilisé par Flutter -->
    <style name="NormalTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowBackground">?android:colorBackground</item>
    </style>

    <!-- ✅ Ajout du thème Theme.AppClient -->
    <style name="Theme.AppClient" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@android:color/holo_blue_bright</item>
        <item name="colorPrimaryVariant">@android:color/holo_blue_dark</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondary">@android:color/holo_green_light</item>
    </style>
</resources>
